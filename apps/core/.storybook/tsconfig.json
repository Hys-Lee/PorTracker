{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    // 이 부분을 수정하거나 추가합니다.
    "module": "esnext", // 'bundler' 옵션과 가장 잘 맞습니다.
    "moduleResolution": "bundler" // 가장 권장되는 최신 옵션입니다.
  },
  "exclude": [
    "../**/*.spec.ts",
    "../**/*.spec.tsx",
    "../**/*.spec.js",
    "../**/*.spec.jsx"
  ],
  "include": ["../**/*.ts", "./**/*.ts"]
}

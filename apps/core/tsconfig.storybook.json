{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "composite": true,
    "emitDecoratorMetadata": true,
    "outDir": "",
    "moduleResolution": "bundler",
    "noEmit": false,
    "module": "preserve",
    "target": "esnext"
  },
  "exclude": [
    "./**/*.spec.ts",
    "./**/*.test.ts",
    "./**/*.spec.js",
    "./**/*.test.js",
    "./**/*.spec.tsx",
    "./**/*.test.tsx",
    "./**/*.spec.jsx",
    "./**/*.test.js"
  ],
  "include": [
    "./**/*.tsx",
    "./**/*.ts",
    "./**/*.stories.ts",
    "./**/*.stories.js",
    "./**/*.stories.jsx",
    "./**/*.stories.tsx",
    "./**/*.stories.mdx",
    ".storybook/*.js",
    ".storybook/*.ts",
    ".storybook/preview.tsx",
    ".storybook/Introduction.mdx",
    "babel.config.asdfjs",
    ".storybook/main.ts",
    ".storybook/_components/*",
    "./mocks/handlers/**/*",
    "./tokens/**/*"
  ],
  "files": [
    "../../node_modules/@nx/react/typings/styled-jsx.d.ts",
    "../../node_modules/@nx/react/typings/cssmodule.d.ts",
    "../../node_modules/@nx/react/typings/image.d.ts"
  ]
}
